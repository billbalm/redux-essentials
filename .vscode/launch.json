{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Test",
      "stopOnEntry": false,
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "cwd": "${workspaceFolder}",
      "args": [
        "--runInBand",
        "--verbose",
        "--no-cache"
      ],
      "env": {
        "NODE_ENV": "test"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true
    }
  ]
}
